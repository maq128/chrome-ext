{
    "name"              : "网页助手",
    "version"           : "1.0",
    "manifest_version"  : 2,
    "description"       : "网页中的一些辅助操作工具。",

    "permissions": [
        "contextMenus"
    ],

    "background": {
        "persistent": true,
        "scripts": [ "background.js" ]
    },

    "icons": {
        "16" : "icon16.png",
        "48" : "icon48.png",
        "128": "icon128.png"
    },

    "content_scripts": [{
        "matches"    : [ "*://*/*", "file:///*" ],
        "run_at"     : "document_end",
        "js"         : [ "inject.js" ],
        "all_frames" : true
    }]
}
